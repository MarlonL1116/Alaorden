<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema principal de tu app -->
    <style name="Theme.ALaOrden" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/Primario</item>
        <item name="colorOnPrimary">@android:color/primary_text_dark</item>

        <item name="colorSecondary">@color/PrimarioOscuro</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <item name="colorSurface">@color/Terciario</item>
        <item name="colorOnSurface">@android:color/black</item>

        <!-- Barra de estado -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>

    <!-- Estilo para botones con degradado -->
    <style name="Widget.App.Button.Gradient" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/botondegradado</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>
