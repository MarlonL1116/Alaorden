<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Método de Pago"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"/>

        <!-- Scroll horizontal con métodos -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Yape -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardYape"
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"

                            android:contentDescription="Yape"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yape"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Plin -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardPlin"
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"

                            android:contentDescription="Plin"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Plin"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Tarjeta -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTarjeta"
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"

                            android:contentDescription="Tarjeta"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tarjeta"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Sección total -->
        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: S/ 0.00"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"/>

        <!-- FORMULARIO TARJETA -->
        <LinearLayout
            android:id="@+id/layoutTarjeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="16dp"
            >

            <EditText
                android:id="@+id/etNombreTitular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del titular"
                android:inputType="textPersonName"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etNumeroTarjeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Número de tarjeta"
                android:inputType="number"
                android:maxLength="16"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etFechaExp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha de expiración (MM/AA)"
                android:inputType="text"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etCvv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CVV"
                android:inputType="numberPassword"
                android:maxLength="3"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnConfirmarPago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar Pago"
            android:textAllCaps="false"
            android:layout_marginTop="24dp"
            android:background="@drawable/botondegradado"
            android:textColor="@color/white"/>
    </LinearLayout>
</ScrollView>
