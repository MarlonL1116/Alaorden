<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Nombre del producto -->
    <TextView
        android:id="@+id/txtNombreCarrito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Producto"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Precio unitario -->
    <TextView
        android:id="@+id/txtPrecioUnitarioCarrito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="S/. 0.00" />

    <!-- Controles de cantidad -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="4dp">

        <Button
            android:id="@+id/btnMinusCarrito"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="-" />

        <TextView
            android:id="@+id/txtCantidadCarrito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnPlusCarrito"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+" />
    </LinearLayout>

    <!-- Subtotal -->
    <TextView
        android:id="@+id/txtSubtotalCarrito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subtotal: S/. 0.00"
        android:paddingTop="4dp"
        android:textStyle="italic" />
</LinearLayout>
