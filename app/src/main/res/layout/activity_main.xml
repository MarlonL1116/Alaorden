<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/Terciario"
    android:theme="@style/Theme.Material3.Light.NoActionBar">


    <LinearLayout
        android:id="@+id/header_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/header_gradient"
        android:padding="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/tvSaludo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hola, -"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/Terciario"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/imgUser"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/iconalaorden_round"
                android:padding="0dp"
                />
        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/Terciario"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📍"
                    android:textSize="20sp"
                    android:layout_marginEnd="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entrega en"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tvDireccionTexto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calle Principal 123, Apt 4B"
                        android:textColor="@color/PrimarioOscuro"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="4dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/lupa"
                app:tint="@color/PrimarioOscuro" />

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:hint="Buscar tiendas, restaurantes..."
                android:background="@android:color/transparent"
                android:paddingStart="12dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textColorHint="@color/plomo"
                android:singleLine="true"
                android:imeOptions="actionSearch"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/category_tabs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleLine="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_inicio"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Todos"
                android:checkable="true"
                android:checked="true"
                app:chipBackgroundColor="@color/white"
                app:chipStrokeColor="@color/PrimarioOscuro"
                app:chipStrokeWidth="2dp"
                android:textColor="@color/Primario" />

            <com.google.android.material.chip.Chip
                android:id="@+id/btnRestaurantes"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurantes"
                android:checkable="true"
                app:chipBackgroundColor="@color/white"
                app:chipStrokeColor="@color/PrimarioOscuro"
                app:chipStrokeWidth="2dp"
                android:textColor="@color/Primario"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/btnTiendas"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiendas"
                android:checkable="true"
                app:chipBackgroundColor="@color/white"
                app:chipStrokeColor="@color/PrimarioOscuro"
                app:chipStrokeWidth="2dp"
                android:textColor="@color/black"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/btnFarmacias"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farmacias"
                android:checkable="true"
                app:chipBackgroundColor="@color/white"
                app:chipStrokeColor="@color/black"
                app:chipStrokeWidth="2dp"
                android:textColor="@color/black"/>

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Establecimientos Destacados"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="15dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerEstablecimientos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:listitem="@layout/item_establecimiento" />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemIconTint="@color/Primario"
        app:itemTextColor="@color/Primario"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/barramenu" />

</LinearLayout>