<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/Terciario"
    android:theme="@style/Theme.Material3.Light.NoActionBar"
    >

    <!-- Encabezado con título y foto de usuario -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvSaludo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hola, -"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/PrimarioOscuro"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"/>

        <ImageView
            android:id="@+id/imgUser"
            android:layout_width="56dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:padding="4dp"
            android:src="@mipmap/iconalaorden_round" />
    </RelativeLayout>

    <!-- Barra de búsqueda dentro de una Card redondeada -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="4dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="12dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/icSearch"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/lupa" />

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/icSearch"
                android:backgroundTint="@color/Terciario"
                android:hint="¿Qué deseas buscar?"
                android:paddingStart="40dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                />

            <ImageView
                android:id="@+id/icFilter"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Categorías (estilo círculos con iconos) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="4"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp">

        <!-- Item 1 -->
        <LinearLayout
            android:id="@+id/btnRestaurantes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_restaurante"
                android:background="@drawable/circulo"
                android:padding="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurantes"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/Primario"/>
        </LinearLayout>

        <!-- Item 2 -->
        <LinearLayout
            android:id="@+id/btnTiendas"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"

            android:foreground="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_tienda"
                android:background="@drawable/circulo"
                android:padding="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiendas"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/Primario"/>
        </LinearLayout>

        <!-- Item 3 -->
        <LinearLayout
            android:id="@+id/btnFarmacias"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_farmacia"
                android:background="@drawable/circulo"
                android:padding="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farmacias"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/Primario"/>
        </LinearLayout>

        <!-- Item 4 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless">

        </LinearLayout>
    </LinearLayout>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerEstablecimientos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="16dp"/>

    <!-- Barra inferior -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Terciario"
        app:itemIconTint="@color/Primario"
        app:itemTextColor="@color/PrimarioOscuro"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/barramenu" />

</LinearLayout>
