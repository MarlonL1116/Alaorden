<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/white">

    <TextView
        android:text="Pago con Tarjeta"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etNumeroTarjeta"
        android:hint="NÃºmero de Tarjeta"
        android:inputType="number"
        android:maxLength="16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/etFechaVencimiento"
        android:hint="Fecha de vencimiento (MM/AA)"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/etCvv"
        android:hint="CVV"
        android:inputType="numberPassword"
        android:maxLength="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/btnConfirmarPago"
        android:text="Confirmar Pago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
